<Window x:Class="ImageMiniLab.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMiniLab.WPF.Views"
        xmlns:tools="clr-namespace:ImageMiniLab.WPF.ViewModels.Tools"
        mc:Ignorable="d"
        Title="Image Mini Lab" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type tools:NoiseTool}">
            <StackPanel Name="SecondToolbar" Orientation="Horizontal">
                <TextBlock Text="雜訊機率(%)" VerticalAlignment="Center" />
                <TextBox Text="{Binding Probability, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5 0 0 0" Width="100" VerticalAlignment="Center"/>
                <Slider Value="{Binding Probability, Mode=TwoWay}" Margin="10 0 10 0" Width="200" Minimum="0" Maximum="100"  TickFrequency="1"/>
                <Button Content="Apply" 
                        Command="{Binding DataContext.SaltPepperNoiseCommand , RelativeSource={RelativeSource AncestorType=Window}}" 
                         />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="檔案(_F)">
                <MenuItem Header="開啟(_O)" Command="{Binding LoadImageCommand}" />
                <MenuItem Header="儲存(_S)" Command="{Binding SaveImageCommand}" />
                <Separator />
                <MenuItem Header="離開(_E)" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="編輯(_E)">
                <MenuItem Header="復原(_U)"  />
                <MenuItem Header="重作(_R)"  />
            </MenuItem>
            <MenuItem Header="分析(_A)">
                <MenuItem />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding ImageFilename}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock Text="{Binding ImageSizeText}" />
            </StatusBarItem>
        </StatusBar>
        
        <StackPanel Name="MainToolbar" Orientation="Horizontal" DockPanel.Dock="Top" Margin="5 3 0 0" >
            <Button Command="{Binding FlipVerticalCommand}" ToolTip="逆時鐘旋轉" Margin="0 0 5 0">
                <Image Source="/Assets/rotate_left.png" Height="24"/>
            </Button>
            <Button Command="{Binding FlipHorizontalCommand}" ToolTip="順時鐘旋轉" Margin="0 0 5 0">
                <Image Source="/Assets/roate_right.png" Height="24"/>
            </Button>
            <Button Command="{Binding FlipHorizontalCommand}" ToolTip="水平翻轉" Margin="0 0 5 0">
                <Image Source="/Assets/flipX.png" Height="24"/>
            </Button>
            <Button Command="{Binding FlipVerticalCommand}" ToolTip="垂直翻轉" Margin="0 0 5 0">
                <Image Source="/Assets/flipY.png" Height="24"/>
            </Button>
            <Button Command="{Binding GrayscaleAverageCommand}" ToolTip="灰階" Margin="0 0 5 0">
                <Image Source="/Assets/gray.png" Height="24"/>
            </Button>
            <Button Command="{Binding GaussianNoiseCommand}" ToolTip="高斯雜訊" Margin="0 0 5 0">
                <Image Source="/Assets/blur.png" Height="24"/>
            </Button>
            <Button Command="{Binding OpenNoiseToolCommand}" ToolTip="椒鹽雜訊" Margin="0 0 5 0">
                <Image Source="/Assets/pepper.png" Height="24"/>
            </Button>
            <Button Command="{Binding HistogramEqualizeCommand}" ToolTip="直方圖均衡" Margin="0 0 5 0">
                <Image Source="/Assets/histo.png" Height="24"/>
            </Button>
        </StackPanel>
        
        <!-- Secondary Toolbar -->
        <Border DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1" Margin="5 5 5 0" Padding="3" Height="30">
            <ContentControl Content="{Binding ActiveTool}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <Trigger Property="Content" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>


        <Grid Margin="0 5 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="5 0 5 0"  Grid.Column="0">
                <Image Source="{Binding ImgInput}" Stretch="Uniform"/>
            </Border>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0 0 5 0" Grid.Column="1">
                <Image Source="{Binding ImgOutput}" Stretch="Uniform" />
            </Border>
        </Grid>
    </DockPanel>
</Window>
