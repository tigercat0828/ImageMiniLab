<Window x:Class="ImageMiniLab.WPF.Views.HistogramDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMiniLab.WPF.Views"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="HistogramDialog" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0">
            <Image Source="{Binding RedChannelImageSource}" />
        </Border>
        <Border Grid.Row="0" Grid.Column="1">
            <Image Source="/Assets/convolution.png" />
        </Border>
        <Border Grid.Row="0" Grid.Column="2">
            <Image Source="/Assets/convolution.png" />
        </Border>

        <Border Grid.Row="1" Grid.Column="0">
            <ScottPlot:WpfPlot Name="RedChannel_Histogram"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1">
            <ScottPlot:WpfPlot Name="GreenChannel_Histogram"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="2">
            <ScottPlot:WpfPlot Name="BlueChannel_Histogram"/>
        </Border>
    </Grid>
</Window>
