<Window x:Class="ImageMiniLab.WPF.Views.ConvolutioMaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMiniLab.WPF.Views"
        mc:Ignorable="d"
        Title="輸入卷積Mask" Height="300" Width="300"
        ResizeMode="NoResize"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <UniformGrid Rows="5" Columns="5" Margin="5" Name="MaskGrid">
            <!-- dynamic build textbox matrix -->
        </UniformGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="確定" Width="50" Margin="5" IsDefault="True" Click="Ok_Click" />
            <Button Content="取消" Width="50" Margin="5" IsCancel="True" />
            <ComboBox Width="80" Margin="5" SelectedItem="{Binding KernelSize, Mode=TwoWay}" SelectionChanged="KernelSize_SelectionChanged">
                <ComboBoxItem Content="3 x 3"/>
                <ComboBoxItem Content="5 x 5"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
